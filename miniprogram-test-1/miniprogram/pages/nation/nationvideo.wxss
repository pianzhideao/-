.or-spacer {
    margin:60rpx auto;
   	width: 100%;
    position: relative;
}
.or-spacer .mask {
    overflow: hidden;
    height: 30rpx;
}
.or-spacer .mask:after {
    content: '';
    display: block;
    margin: -25rpx auto 0;
    width: 100%;
    height: 25rpx;
    border-radius: 125px/12px;
    box-shadow: 0 0 8px black;
}
.or-spacer span {
    width: 30%;
    height: 70rpx;
    position: absolute;
    top:-40rpx;
    margin-bottom: -25px;
    left: 36%;
    border-radius: 100%;
    box-shadow: 0 2rpx 4rpx #999;
    background: white;
}
.or-spacer span i {
    position: absolute;
    top: 4rpx;
    bottom: 4rpx;
    left: 4rpx;
    right: 4rpx;
    border-radius: 100%;
    border: 1rpx dashed #aaa;
    text-align: center;
    line-height: 50rpx;
    font-style: normal;
    color: #999;
}